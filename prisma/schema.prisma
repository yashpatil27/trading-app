generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String
  password     String
  tradingPin   String        @default("1234")
  role         String        @default("USER")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@index([email])
  @@index([role])
  @@index([createdAt])
}

model Transaction {
  id                 String   @id @default(cuid())
  userId             String
  type               String
  btcAmount          Float?
  btcPriceUsd        Float?
  btcPriceInr        Float?
  usdInrRate         Float?
  inrAmount          Float
  inrBalanceAfter    Float
  btcBalanceAfter    Float
  btcAmountSatoshi   BigInt?
  btcPriceUsdInt     Int?
  btcPriceInrInt     Int?
  usdInrRateInt      Int?
  inrAmountInt       Int?
  inrBalanceAfterInt Int?
  btcBalanceAfterSat BigInt?
  reason             String?
  createdAt          DateTime @default(now())
  user               User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([userId, type])
  @@index([type, createdAt])
  @@index([createdAt])
  @@index([userId])
}

model BtcPrice {
  id          String   @id @default(cuid())
  priceUsd    Float
  priceUsdInt Int?
  createdAt   DateTime @default(now())

  @@index([createdAt])
}
