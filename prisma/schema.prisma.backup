// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  balance   Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  trades    Trade[]
  balanceHistory BalanceHistory[]
  holding   UserHolding?
}

model Trade {
  id        String    @id @default(cuid())
  userId    String
  type      TradeType
  amount    Float     // Amount in BTC
  price     Float     // Price in INR per BTC
  total     Float     // Total in INR
  btcPrice  Float     // Original BTC/USD price
  createdAt DateTime  @default(now())
  
  user      User      @relation(fields: [userId], references: [id])
}

model BalanceHistory {
  id        String      @id @default(cuid())
  userId    String
  type      BalanceType
  amount    Float
  balance   Float       // Balance after this transaction
  reason    String?
  createdAt DateTime    @default(now())
  
  user      User        @relation(fields: [userId], references: [id])
}

model BtcPrice {
  id        String   @id @default(cuid())
  price     Float    // BTC/USD price
  createdAt DateTime @default(now())
}

model UserHolding {
  id        String   @id @default(cuid())
  userId    String   @unique
  btcAmount Float    @default(0)
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum TradeType {
  BUY
  SELL
}

enum BalanceType {
  CREDIT
  DEBIT
  TRADE_BUY
  TRADE_SELL
}
